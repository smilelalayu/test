<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hm.userauth.dao.WhiteIpMangerMapper" >

	<!-- redis缓存 -->
	<!--  <cache type="com.gep.core.cache.MybatisRedisCache" /> -->
	
	<resultMap id="BaseResultMap" type="com.hm.userauth.model.WhiteIp" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="ip" property="ip" jdbcType="VARCHAR" />
		<result column="app_Code" property="appCode" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="description" property="description" jdbcType="VARCHAR" />
	</resultMap>

   <sql id="Base_Column" >
      ID, IP, app_Code, status,description
   </sql>

	<sql id="Base_Condition_Select">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="ip != null and ip != ''" >
	        AND ip = #{ip,jdbcType=VARCHAR}
			</if>
			<if test="appCode != null and appCode != ''" >
	        AND app_Code = #{appCode,jdbcType=VARCHAR}
			</if>
			<if test="status != null and status > 0" >
	        AND status = #{status,jdbcType=INTEGER}
			</if>
			<if test="description != null and description != ''" >
	        AND description = #{description,jdbcType=VARCHAR}
			</if>
			<if test="id != null and id > 0" >
	        AND id = #{id,jdbcType=INTEGER}
			</if>
		</trim>
	</sql>

   <select id="list" resultMap="BaseResultMap" parameterType="com.hm.userauth.model.WhiteIp" >
    select 
		<include refid="Base_Column" />
    from  uum_white_ip
		<include refid="Base_Condition_Select" />
	</select>
	
	<insert id="insert" parameterType="com.hm.userauth.model.WhiteIp" >
	    insert into uum_white_ip
	    <trim prefix="(" suffix=")" suffixOverrides="," >
	      <if test="ip != null" >
	        ip,
	      </if>
	      <if test="appCode != null" >
	        app_Code,
	      </if>
	      <if test="status != null" >
	        status,
	      </if>
	       <if test="description != null" >
	        description,
	      </if>
	    </trim>
	    <trim prefix="values (" suffix=")" suffixOverrides="," >
	      <if test="ip != null" >
	        #{ip,jdbcType=VARCHAR},
	      </if>
	      <if test="appCode != null" >
	        #{appCode,jdbcType=VARCHAR},
	      </if>
	      <if test="status != null" >
	        #{status,jdbcType=INTEGER},
	      </if>
	      <if test="description != null" >
	        #{description,jdbcType=VARCHAR},
	      </if>
	    </trim>
	  </insert>
	  <update id="update" parameterType="com.hm.userauth.model.WhiteIp" >
	    update uum_white_ip
	    <set >
	      <if test="ip != null" >
	        ip = #{ip,jdbcType=VARCHAR},
	      </if>
	      <if test="appCode != null" >
	        app_Code = #{appCode,jdbcType=VARCHAR},
	      </if>
	      <if test="status != null" >
	        status = #{status,jdbcType=INTEGER},
	      </if>
	       <if test="description != null" >
	        description = #{description,jdbcType=VARCHAR},
	      </if>
	    </set>
	    where id = #{id,jdbcType=BIGINT}
	  </update>

</mapper>