<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hm.appinfo.dao.LnAppStatusHmMapper" >
  <!-- redis缓存 -->
  <cache type="com.gep.core.cache.MybatisRedisCache" />
  
  <parameterMap id="lnAppStatus" type="com.hm.appinfo.model.LnAppStatus" />
	
  <resultMap id="BaseResultMap" type="com.hm.appinfo.model.LnAppStatus" >
    <id column="ID" property="id" jdbcType="BIGINT" />
    <result column="TRADE_NO" property="tradeNo" jdbcType="VARCHAR" />
    <result column="TRADE_NAME" property="tradeName" jdbcType="VARCHAR" />
    <result column="CODE" property="code" jdbcType="VARCHAR" />
    <result column="TYPE" property="type" jdbcType="VARCHAR" />
    <result column="STATUS_DESC_INNER" property="statusDesc" jdbcType="VARCHAR" />
    <result column="STATUS_DESC_OUTER" property="statusDescOuter" jdbcType="VARCHAR" />
  </resultMap>
  
  
  <select id="list" resultMap="BaseResultMap" >
  	  select * from ln_status where TRADE_NO is not null and (MODULE is null or MODULE = '02' or MODULE = '') GROUP BY `CODE` 
  </select>
  <select id="getTradeNosByCode" resultType="java.lang.String" parameterType="java.lang.String">
	select TRADE_NO from ln_status WHERE `CODE`= #{code,jdbcType=VARCHAR}
  </select>
</mapper>