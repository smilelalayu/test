    ID, ACTION_CODE, VERSION, TYPE, RULE_ID, RULES
	</sql>
	
	<sql id="Base_Condition_Select">
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="actionCode != null and actionCode != ''" >
	           AND ACTION_CODE = #{actionCode,jdbcType=VARCHAR}
			</if>
			<if test="version != null and version > 0" >
	           AND VERSION = #{version,jdbcType=INTEGER}
			</if>
			<if test="type != null and type != ''" >
	           AND TYPE = #{type,jdbcType=VARCHAR}
			</if>
			<if test="ruleId != null and ruleId > 0" >
	           AND RULE_ID = #{ruleId,jdbcType=BIGINT}
			</if>
			<if test="id != null and id > 0" >
	           AND id = #{id,jdbcType=BIGINT}
			</if>
		</trim>
	</sql>

	<select id="list" resultMap="BaseResultMap" parameterType="com.hm.validate.model.ValidForms" >
    select 
		<include refid="Base_Column" />
    from validate_forms
